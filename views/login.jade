extends layout


block content

 div.signup

    form(name='login', action='/users/login', method='post', enctype='application/x-www-form-urlencoded')
        h1 Log in
        p E-mail:
        input(type='email', name='useremail', autofocus)
        p Password:
        input(type='password', name='password')
        p
        button(type='submit') Save
        hr
        p Need an account?
        p

        a.two(href='/users/signup/', style='text-decoration: none') Sign up