body
  div.wrapper
    include header
    div.contents
        table(align='center')
            td.t
                div.index
                    div.bravito
                        h1.center.teal #{i18n('boolbi')}
                        table
                            td
                                img.goods(src='/images/logo/goods.png')
                            td
                                div.width
                                    a.button(href='/ads/newad') #{i18n('newad')}

                        div.column
                            each category, i in categories
                                a(href='/category/#{category._id}')
                                    div.indexCategory
                                        p.index #{category.name[session.locale]}

                                            script(type='text/javascript').
                                                var counttre = function (counts, id) {
                                                    console.log(counts);
                                                    function findFrontImage(image) {
                                                        return image.front_image === 'yes';
                                                    }

                                                    return images.find(findFrontImage);
                                                }

                                            span.count(value='counttre("#{counts}", "#{category._id}")')



                        br
                        p.small #{i18n('text1')}
            td.t
                if mainAds
                    each ad, i in mainAds
                        a(href='/ads/#{ad._id}')
                            div.advertisement
                                table.center
                                    tr
                                        td
                                            if ad.images
                                                img.main(src='/images/small/#{ad.images[0].src}')
                                    tr
                                        td
                                            p.small #{ad.title}
                                    tr
                                        td
                                            p #{ad.price}
    include footer
