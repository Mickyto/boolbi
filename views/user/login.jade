extends ../layout


block content

 div.signup

    form(name='login', action='#{formAction}', onsubmit='event.preventDefault(); return validateForm("login")', method='post', enctype='application/x-www-form-urlencoded')

        if message.length > 0
            div.msg
                p #{message}
        table


            tr
              td(rowspan=2)
                p E-mail:
              td
                p.validateErr#useremail Email is incorrect
            tr
              td
                input.login#email(type='email', name='useremail', autofocus)
            tr
                td(colspan=2)
                    p.validateErr#password Password has to be minimum 8 characters
            tr
              td
                p Password:
              td
                input.login#pass(type='password', name='password')
        p
            button(type='submit', class=(btnValue == 'Log in' ? 'login' : 'signup')) #{btnValue}

            if btnValue == 'Log in'
                p Need an account?
                   a.three(href='/users/signup/') Sign up
            else
                p Have an account?
                    a.three(href='/users/login/', style='color: PaleTurquoise') Log in

 script(type='text/javascript', src='/javascripts/validator.min.js').
 script(type='text/javascript', src='/javascripts/validateFields.js').


