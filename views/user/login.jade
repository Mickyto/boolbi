extends ../layout


block content

 div.signup

    form(name='login', action='/users/login', onsubmit='return validateForm()', method='post', enctype='application/x-www-form-urlencoded')
        h1 Log in

        if message.length > 0
            div.msg
                p #{message}

        p E-mail:
        input(type='email', name='useremail', autofocus)
        p Password:
        input(type='password', name='password')
        p
        button(type='submit') Log in

        hr
        p Need an account?
        p

        a.two(href='/users/signup/', style='text-decoration: none') Sign up

 script(type='text/javascript', src='/javascripts/validator.min.js').
 script(type='text/javascript').
     function validateForm() {
         var email = document.forms['login']['useremail'].value;
         if (email == null || email == '' || !validator.isEmail(email)) {
             alert('Incorrect enter of username');
             return false;
         }
         var pass = document.forms['login']['password'].value;
         if (pass == null || pass == '' || !validator.isAlphanumeric(pass)) {
             alert('Incorrect enter of password');
             return false;
         }
     }


