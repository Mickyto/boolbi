extends ../layout
block content

    div.bravito

        h1 #{i18n('recovery')}

        if message.length > 0
            div.msg #{message}

        form(name='passwordRecovery', action='/users/recovery', method='post', onsubmit='return validateForm()', enctype='application/x-www-form-urlencoded')
            p.small #{i18n('enterEmail')}
            input(type='email', name='email', placeholder='email', autofocus)
            button(type='submit') #{i18n('next')}


    script.
        function validateForm() {
            var input = document.forms['passwordRecovery']['email'];
            if (input.value == '') {
                input.focus()
                return false;
            }
        }
