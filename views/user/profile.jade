extends ../layout


block content

  h1 Hello

  div
    table
      tr
        td
          h5 E-mail:
        td
          p #{user.email}
      tr
        td
          h5 Name:
        td
          p #{user.name}
      tr
        td
          h5 Telephone:
        td
          p #{user.telephone}
      tr
        td
          h5
      tr
        td
          a.one(href='/users/edit') Edit
        td
          a.one(href='/users/logout') Log out

  if myAds.length > 0
      h1 My ads:
        each ad, i in myAds
          div
            a(href='/ads/#{ad._id}')
              if ad.image1
                 img.showAds(src='/images/#{ad.image1}', width=150)
              else if ad.image2
                 img.showAds(src='/images/#{ad.image2}', width=150)
              else
              h5 #{ad.title}
              p
              h5 #{ad.price}

  if pages.length > 1
    ul.a
      each page, i in pages
        li.a
          a.four(href='#{page}') #{[i] * 1 + 1}

  script.
    document.getElementsByClassName('four')[#{currentPage}].setAttribute('class', 'five');
    document.getElementsByClassName('four')[0].setAttribute('class', 'six');
