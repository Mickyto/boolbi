extends ../layout


block content

 div.signup

    form(name='signup', action='/users/signup/', onsubmit='return validateForm()', method='post', enctype='application/x-www-form-urlencoded')
        h1 Sign up
        p Username:
            input(type='text', name='username', autofocus)
        p E-mail:
            input(type='email', name='useremail')
        p Password:
            input(type='password', name='password')
        p
            button(type='submit') Save

 script(type="text/javascript" src="/javascripts/validator.min.js").
 script(type='text/javascript').
    function validateForm() {
        var name = document.forms["signup"]["username"].value;
        if (name == null || name == "" || !validator.isAlphanumeric(name)) {
            alert("Username must be filled out");
            return false;
        }
        var email = document.forms["signup"]["useremail"].value;
        if (email == null || email == "" || !validator.isEmail(email)) {
            alert("Email must be filled out");
            return false;
        }
        var pass = document.forms["signup"]["password"].value;
        if (pass == null || pass == "" || !validator.isAlphanumeric(pass)) {
            alert("Password must be filled out");
            return false;
        }

    }
