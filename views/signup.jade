extends layout


block content

 div.signup

    form(name='signup', action='/users/signup/', method='post', enctype='application/x-www-form-urlencoded')
        h1 Sign up
        p User name:
            input(type='text', name='username', autofocus)
        p E-mail:
            input(type='email', name='useremail')
        p Password:
            input(type='password', name='password')
        p
            button(type='submit') Save

