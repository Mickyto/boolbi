extends ../layout

block content

    if message.length > 0
        div.msg
            p #{message}

    each ad, i in ads
        div.bravito
          a(href='/ads/#{ad._id}')
             if ad.image1
                  img.showAds(src='/images/#{ad.image1}', width=150)
             else if ad.image2
                  img.showAds(src='/images/#{ad.image2}', width=150)
          div.categ
             a(href='/ads/#{ad._id}')
               p #{ad.title}
             br
             p #{ad.price}
        br

    if pages && pages.length > 1
        ul.a
            each page, i in pages
                li.a
                    a.four(href='#{page}') #{[i] * 1 + 1}



    script.
        document.getElementsByClassName('four')[#{pageIndex}].setAttribute('class', 'five');
        document.getElementsByClassName('four')[0].setAttribute('class', 'six');





