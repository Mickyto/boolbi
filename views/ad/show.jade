extends ../layout

block content

 if ad.reason && session.user_id == user._id
     div.msg #{ad.reason}

 div.bravito

     h1 #{ad.title}
     hr
     p.fr #{category.name[session.locale]}
     br

     div.image

            img.show(src='/images/big/#{ad.images.image1}')


     div.thumbnail

             img.showAds(src='/images/big/#{ad.images.image1}')

             img.showAds(src='/images/big/#{ad.images.image2}')



     p #{ad.description}
     br
     table
         td.r
             p.small #{i18n('price')}
         td.info.inl
             p.info.med  #{ad.price} #{i18n('rub')}

     hr
     table
          tr
              td.r(rowspan=2)
                  p.small Seller
              td.info
                  p #{user.name}
          tr
              td.info
                  p #{user.telephone}
              td.info
                  p #{user.email}

     if message.length > 0
          div.msg #{message}

     if session.user_id == user._id
         hr
         table
             tr
               td
                 form(action='/ads/#{ad._id}/edit')
                     button.fl.signup(type='submit') #{i18n('edit')}
               td
                 a.greenButton.fl(onclick="showWindow()") #{i18n('Del')}

 div.alert
     span.bgAlert(onclick="closeWindow()")
     div.content
         div.categ
             p #{i18n('alertDel')}
         div(align='right')
             table
                 td
                   form(action='/ads/#{ad._id}', method='post', enctype='application/x-www-form-urlencoded')
                      input(type='hidden', value='DELETE', name='_method')
                      button.fr.login(type='submit') #{i18n('Del')}
                 td
                   button.fr(onclick="closeWindow()") #{i18n('cancel')}



 script.
     var showWindow = function() {
         document.getElementsByClassName('alert')[0].style.display = 'block';
     }
     var  closeWindow = function() {
         document.getElementsByClassName('alert')[0].style.display = 'none';
     }
