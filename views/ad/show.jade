extends ../layout

block content

 div.bravito

    h1 User information
    hr
    br

    table
       tr
          td
            p.small #{i18n('name')}: &nbsp &nbsp
          td.info
            p #{user.name}
       tr
          td
            p.small Email: &nbsp &nbsp
          td.info
            p #{user.email}
       tr
          td
            p.small #{i18n('tel')}: &nbsp &nbsp
          td.info
            p #{user.telephone}


    h1 Item information
    hr
    br

    table
        tr
          td
            p.small #{i18n('category')}:
          td.info
            p  #{category.name[session.locale]}
        tr
          td
            p.small #{i18n('title')}:
          td.info
            p #{ad.title}
        tr
          td
            p.small #{i18n('description')}:
          td.info
            p   #{ad.description}
        tr
          td
            p.small #{i18n('price')}:
          td.info.inl
            p.info.med  #{ad.price} #{i18n('rub')}

        tr
          td
            p.small #{i18n('photo')}:

    if ad.image1 !== undefined
        img.show(src='/images/#{ad.image1}')
    if ad.image2 !== undefined
        img.show(src='/images/#{ad.image2}')

    if session.user_id == user._id
        hr
        form(action='/ads/#{ad._id}/edit')
            button(type='submit') #{i18n('edit')}

        form(action='/ads/#{ad._id}/edit', method='post', enctype='application/x-www-form-urlencoded')
            input(type='hidden', value='DELETE', name='_method')
            button(type='submit') #{i18n('Del')}




