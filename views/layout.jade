doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')

  body
    table(style={width: '100%'})
       tr
          td
           a(href='/')
             img.logo(src='/images/logo/logo.png', alt='logo', width=280, height=80)
           p #{session.email}
          if session.user_id
              td
               a.one(href='/ads/newad', style='text-decoration: none') new ad
              td
               a.one(href='/users/profile', style='text-decoration: none') profile
          else
              td
               a.one(href='/users/login', style='text-decoration: none') log in

      hr
  block content

  div.footer
      hr
      p E-mail: info@bravito.ru