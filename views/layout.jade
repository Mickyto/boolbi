doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/font-awesome.css')

  body
      div.header
        table.full
              td
                  a(href='/')
                      p.logo giwwer
              td.center
                div.scope
                     form(action='/search', method='get', enctype='application/x-www-form-urlencoded')
                          input.search(type='text', placeholder='#{i18n("findad")}', name='search', , value=(word ? '#{word}' : ''))
                          button.search(type='submit') #{i18n('search')}
              td.center
                 a.one(href='/ads/newad') #{i18n('newad')}
              td.center
                 if session.user_id
                    a.one.fa.fa-user(href='/users/profile') &nbsp #{session.email}
                 else
                    a.one(href='/users/login') #{i18n('login')}
              td.gold.center
               each lang in ['ru', 'en']
                a.seven(href='/locale?locale=#{lang}&current=#{curPage}')
                    div.lang
                        p.small #{lang}
      hr

  table(align='center')
      tr
        td.t
          div.left
              each category, i in categories
                  div.category
                      a.category(href='/category/#{category._id}')
                          div.categ.divHover
                              p #{category.name[session.locale]}  &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                                   span(id='#{category._id}', align='right')





        td.t
          div.block
            block content
        td.t
                div.advertisement
                    p.center #{i18n('advert')}
                div.advertisement
                    p.center #{i18n('advert')}
                div.advertisement
                    p.center #{i18n('advert')}

  hr
  div.header
      p E-mail: info@bravito.ru



  script.
          document.getElementById('#{category}').setAttribute('class', 'fa fa-circle r');


