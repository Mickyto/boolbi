              td.center
                 a.one(href='/ads/newad') #{i18n('newad')}
              td.center
                 if session.user_id
                    a.one(href='/users/profile')
                        span(class='fa fa-user') &nbsp #{session.email}
                 else
                    a.one(href='/users/login') #{i18n('login')}
      hr

