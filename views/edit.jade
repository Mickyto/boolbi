extends layout

block content
 h1 Ad Edit

    div

      form(action='/ads/#{user._id}/adedit' method='post' name='updatead' enctype="multipart/form-data, application/x-www-form-urlencoded")
         p Name:
           input(type='text' value='#{user.name}' name='username')
         p E-mail:
           input(type='text' value='#{user.email}' name='useremail')
         p Telephone:
           input(type='text' value='#{user.telephone}' name='usertelephone')
         p Title:
           input(type='text' value='#{user.title}' name='adtitle' maxlength=60 size=42)
         p Description:
           textarea(name='addescription' rows=10 cols=40) #{user.description}
         p Price:
           input(type='text' value='#{user.price}' name='adprice')
         p Photos:
             div.fileUpload
               input.upload(type='file' name='photo1' accept='image/*' onchange='openPhoto1(event)')
               img#photo1(src='/images/#{user.mainphoto}' width=150)
             div.fileUpload
               input.upload(type='file' name='photo2' accept='image/*' onchange='openPhoto2(event)')
               img#photo2(src='/images/#{user.photo1}' width=150)
         p
           input(type='hidden' value='PUT' name='_method')
         p
           button(type='submit') Update

 script(type='text/javascript').
    var openPhoto1 = function (event) {
        var input = event.target;
        var reader = new FileReader();
        reader.onload = function () {
            var dataURL = reader.result;
            var output = document.getElementById('photo1');
            output.src = dataURL;
            };
            reader.readAsDataURL(input.files[0]);
    };

 script(type='text/javascript').
    var openPhoto2 = function (event) {
        var input = event.target;
        var reader = new FileReader();
        reader.onload = function () {
            var dataURL = reader.result;
            var output = document.getElementById('photo2');
            output.src = dataURL;
        };
        reader.readAsDataURL(input.files[0]);
    };